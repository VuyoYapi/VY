<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultDisplay"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle2"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/textTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="312dp"
        android:fontFamily="monospace"
        android:text="Result:"
        android:textAllCaps="true"
        android:textColor="#43A047"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle1"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/statBtn"
        android:layout_width="229dp"
        android:layout_height="48dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="40dp"
        android:text="Statistics Functions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/errorMsg"
        android:layout_width="213dp"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:fontFamily="monospace"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultDisplay" />

    <Button
        android:id="@+id/multiplyBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:text="x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/additionBtn"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/subtractionBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="56dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toEndOf="@+id/additionBtn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/additionBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="40dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle1"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/divideBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:text="รท"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/multiplyBtn"
        app:layout_constraintTop_toBottomOf="@+id/subtractionBtn"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/input1"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Number 1"
        android:importantForAutofill="no"
        android:inputType="numberSigned"
        android:textColorHint="#546E7A"
        app:layout_constraintStart_toEndOf="@+id/textTitle1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,LabelFor" />

    <EditText
        android:id="@+id/input2"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Number 2"
        android:importantForAutofill="no"
        android:inputType="numberSigned"
        android:textColorHint="#546E7A"
        app:layout_constraintStart_toEndOf="@+id/input1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,LabelFor" />

    <TextView
        android:id="@+id/textTitle1"
        android:layout_width="120dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:text="Enter Numbers:"
        android:textColor="#DF2020"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="true"
        tools:ignore="HardcodedText,TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>